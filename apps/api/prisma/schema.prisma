datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  USER
  ADMIN
}

enum OrderStatus {
  PENDING
  PAID
  CANCELLED
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  orders    Order[]
}

model Category {
  id    Int    @id @default(autoincrement())
  name  String @unique
  cakes Cake[]
}

model Cake {
  id          Int      @id @default(autoincrement())
  name        String
  description String   @default("")
  priceCents  Int
  imageUrl    String?
  categoryId  Int
  category    Category @relation(fields: [categoryId], references: [id])
}

model Order {
  id         Int         @id @default(autoincrement())
  userId     Int
  user       User        @relation(fields: [userId], references: [id])
  totalCents Int
  status     OrderStatus @default(PENDING)
}
